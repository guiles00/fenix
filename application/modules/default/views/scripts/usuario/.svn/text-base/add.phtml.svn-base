<script type="text/javascript">
function listar(){
	
url="./default/usuario/list";
		$.ajax({url: url,
	        success:function(result){
	        $('#content').html(result);
	      }});
	   
	    return false;
}

function editForm(f){

    var url = f.action;
    $.ajax({url: url,
        data:{add: f.add.value
            ,id: f.id.value 
            ,tipo_usuario_id: f.tipo_usuario_id.value
            ,usuario_tipo_id: f.usuario_tipo_id.value
            ,username: f.username.value
            ,password: f.password.value
            }
        , success:function(result){
        $('#content').html(result);
      }});
   
   
    return false;
}
function addUsuario(f){

	var url = f.action;

	var tabs_sel = $('#tabs').tabs();
	var idx = tabs_sel.tabs('option', 'selected');

	//Trae el tab correspondiente
	var tab = $('#tabs ul li a')[idx];
	//console.debug($('#tabs ul li a'));
	var href = $(tab).attr('href') ;                       
	 $.ajax({url: url,
	        data:{add: f.add.value
	            ,id: f.id.value 
	            ,tipo_usuario_id: f.tipo_usuario_id.value
	            ,usuario_tipo_id: f.usuario_tipo_id.value
	            ,username: f.username.value
	            ,password: f.password.value
	            }
	        , success:function(result){
	        $(href).html(result);
	      }});
	   
	   
	    return false;
	}

</script>
<form action="./default/usuario/add" onSubmit="return editForm(this)">
<input type="hidden" name="add" value="1"></input>
<table>
