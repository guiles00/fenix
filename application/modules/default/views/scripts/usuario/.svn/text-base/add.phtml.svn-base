<tr><td>usuario_tipo_id</td><td><input type="text" name="usuario_tipo_id" value=""></input></td></tr>
<tr><td>username</td><td><input type="text" name="username" value=""></input></td></tr>
<tr><td>password</td><td><input type="text" name="password" value=""></input></td></tr>
<tr><td></td><td><input type="submit" value="guardar"></input></td><td><input type="button" name="Cancel" onclick="return usuario()" value="cancel" /></input></td></tr>
</table>	
</form>