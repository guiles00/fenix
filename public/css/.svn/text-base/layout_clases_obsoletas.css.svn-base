/******************************** Contenido *********************************/
#navigation-bar a, #menu a {
	color: white;
}

#navigation-bar {
	display: block;
	margin: 0 0 15px 0;
}

#content.sidebar-left #navigation-bar {
	margin-left:210px;
	padding: 0.5em 1em;
}

#content.sidebar-right #navigation-bar {
	margin-right:210px;
	padding: 0.5em 1em;
}

#navigation-bar-inner {
	display: inline-block;
	-moz-border-radius: 10px;	
	border: 1px solid #DDDDDD;
	background-color: #0099FF;
	color: white;
	padding: 10px;
}

#navigation-bar-inner ul {
	margin: 0;
	padding: 0;
	float: left;
}

#navigation-bar-inner ul li {
	margin: 0 5px 0 0;
	display: inline-block;
	font-weight: bold;
}

#navigation-bar-inner ul li:hover {
	-moz-border-radius: 5px;	
	background-color: orange;	
	cursor: pointer;
}

#content {
	display: block;
}

#content.sidebar-right #main, #content.sidebar-left #main {
	margin-bottom: 20px;
}

#content.sidebar-right #main {
	margin-right:-210px;
}

#content.sidebar-left #main {
	margin-left:-210px;
}

#content.sidebar-left #squeeze {
	margin: 0 0 0 210px;
	padding: 0.5em 1em;
}

#content.sidebar-right #squeeze {
	margin: 0 210px 0 0;
	padding: 0.5em 1em;
}

#page {
	-moz-border-radius: 10px;	
	border: 1px solid #DDDDDD;
	padding: 10px;
}

#squeeze {
	position:relative;
	margin: 15px;
}

.clear-block {
	display:block;
}

#main {
	float:left;
	width:100%;
}

#content .sidebar {
	width:210px;
	margin:0;
	position:relative;
	z-index:2;
}

#content.sidebar-right .sidebar {
	float:right;
}

#content.sidebar-left .sidebar {
	float:left;
}
/******************************** /Fin del Contenido *********************************/

/********************************* Barra Derecha *****************************/
