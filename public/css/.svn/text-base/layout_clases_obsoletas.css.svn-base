	font-family: "Arial",sans-serif;
	font-size: 14px;
	margin: 0;
}

#title h3{
	font-family: "Times New Roman",serif;
	font-size: 12px;
	margin: 0;
}



/**************************** /Fin Barra Derecha *****************************/

/**************************** Estilos Login **********************************/

#box-login {
	position: absolute;
	left: 50%;
	top: 30%;
	width: 260px;
	height: 205px;
	margin-top: -100px;
	margin-left: -150px;
	-moz-border-radius: 10px;
	/*overflow: auto;*/
	border: 1px solid;
}

#box-login form input{
	margin: 3px;
}	

#box-login form{
	padding-left: 11px;
}

#titulo-login{
	background-color: #5c9ccc;	 
	font-family: Helvetica;
	color: #ffffff;
	width: 669px;
	padding: 2px 0px 1px 5px;
	-moz-border-radius: 6px;
}
	
.content-box-login form {
	padding-top: 2px;
}

.header-box-login {
	color: #ffffff;
	background-color: #5c9ccc;
	padding: 7px 0px 7px 3px;
	-moz-border-radius-topright: 6px;
	-moz-border-radius-topleft:  6px;
}

#login{
	color: #ffffff;
	background-color: #5c9ccc;
	-moz-border-radius: 6px;
	position: relative;
	left: 110px; 
	top: 9px;
}        

/************************************* /Fin Estilos Login ****************************************/
